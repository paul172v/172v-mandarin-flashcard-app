{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "allowImportingTsExtensions": true
  },

  "include": ["src", "typings"],
  "exclude": ["node_modules", "**/__tests__/*", "**/*.test.ts"],
  "jest": {
    "setupFiles": ["<rootDir>/src/setupTests.js"]
  }
}
